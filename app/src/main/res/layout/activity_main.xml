<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1"
    tools:context="com.example.olaoluolarewaju.stopwatch.MainActivity">

    <TextView
        android:id="@+id/textViewThreadCount"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="SpentTime:"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonThreadStrater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="@string/StartWatch"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:background="#11F"/>

    <Button
        android:id="@+id/buttonStopThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/StopWatch"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/buttonThreadStrater" />
</RelativeLayout>